
.top{
	width: 100%;
	height: 100px;
	margin-top: 20px;
}

.headicon{
	width: 65px;
	height: 65px;
	background-color: #333333;
	float: left;
	border-radius: 50%;
	margin:0 10px 0 15px;
}

.headicon image{
	width:100%;
	height:100%;
	display:block;
}

.info{
     width: 69px;
     float: left;
     line-height:1;
     margin-top: 5px;
}

.info text{
	font-size: 15px;
	color: #333333;
}

.info .name{
	font-size: 22px;
    color: #ff6600;
}

.nav{
    font-size: 15px;
    color: #333333;
    line-height: 43px;
    border-bottom: 1px solid #EEEEEE;
    margin-left: 20px;
}

.nav .arr{
	float: right;
	display: inline;
	border:1px #333333 solid;
	transform: rotate(45deg);
	height: 12px;
	width: 12px;
	margin:15px;
	border-bottom: 0;
	border-left: 0;
}

.nav switch{
	float:right;
}
