.top{
	width: 100%;
	height: 80px;
	margin-top: 20px;
}

.top span{
	float:left;
	font-size:14px;
	color:#333333;
	margin:20px 15px; 
}
.headicon{
	width: 65px;
	height: 65px;
	background-color: #333333;
	float: right;
	border-radius: 50%;
	margin:0 15px ;
}

.headicon image{
	width:100%;
	height:100%;
	display:block;
}

.info{
     width: 100%;
     float: left;
     line-height:1;
     margin-top: 5px;
}

.info .person, .info .select, .experience{
	width:95%;
	height:35px;
	margin-left: 5%;
	border-top:1px solid #EEEEEE;
	vertical-align: middle;
	padding-top: 15px;
}

.info text{
	font-size: 14px;
	color: #333333;
	display: inline;
}

.info input{
    font-size:14px;
    float:right;
    margin-right: 20px;
    color:#ff6600;
    text-align: right;
}

 .arr{
	float: right;
	display: inline;
	border:1px #333333 solid;
	transform: rotate(45deg);
	height: 12px;
	width: 12px;
	margin:-15px 15px;
	border-top: 0;
	border-left: 0;
}

.exp{
	height:35px;
}

.exp,.intro{
	width:100%;
	border-top:15px solid #EEEEEE;
	vertical-align:middle;
	padding-top: 15px;
	text-indent: 15px;
}

.intro text{
	font-size:18px;
}

.intro textarea{
	height:80px;
	width:92%;
	margin:20px 0;
	font-size:14px;
}
.footer{
	width:100%;
    display:flex;
    flex-direction:row;
    border-top:15px solid #EEEEEE;
}

.footer button{
	width:120px;
	height:40px;
	background-color:transparent;
	border:1px solid #333333;
	line-height:40px;
	margin-top:15px;
}

.footer button:hover{
	border:1px solid #FF6600;
	color:#FF6600;
}