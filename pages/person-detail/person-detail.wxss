.top{
	width: 100%;
	height: 100px;
	margin-top: 20px;
}

.headicon{
	width: 65px;
	height: 65px;
	background-color: #333333;
	float: left;
	border-radius: 50%;
	margin:0 10px 0 15px;
}

.headicon image{
	width:100%;
	height:100%;
	display:block;
}

.refer{
     width: 69px;
     float: left;
     line-height:1;
     margin-top: 5px;
}

.refer .name{
	font-size: 22px;
    color: #ff6600;
}

.refer text{
	font-size: 14px;
	color: #333333;
	display: inline;
}
.info{
     width: 100%;
     float: left;
     line-height:1;
     margin-top: 5px;
}

.info text{
	font-size: 14px;
	color: #333333;
	display: inline;
}

.info .person-detail, .info .case{
	width:95%;
	height:35px;
	margin-left: 5%;
	border-top:1px solid #EEEEEE;
	vertical-align: middle;
	padding-top: 15px;
}
.info .msg{
	font-size:14px;
    float:right;
    margin-right: 20px;
    color:#ff6600;
    text-align: right;
}
.bor{
	width:100%;
	height:17px;
	background-color:#EEEEEE;
}

.experience,.introduction{
    width:100%;
	border-top:15px solid #EEEEEE;
	vertical-align:middle;
	padding-top: 15px;
	padding-bottom: 15px;
	text-indent: 15px;
	overflow: hidden;
}

.experience .title text,.introduction text{
	font-size:18px;
}

.exper-content{
	width: 88%;
	display: flex;
	flex-direction: row;
}
.exper-content view{
	height: auto;
	display: flex;
	flex-direction: column;
	margin-top: 5px;
	text-align: left;
}

.exper-content .up, .down{
	font-size: 13px;
}

.exper-content .down{
	color: #FF6600;
}

.exper-content .office{
	flex-grow: 1;
}

.introduction textarea{
	height:80px;
	width:92%;
	margin:20px 0;
	font-size:14px;
}